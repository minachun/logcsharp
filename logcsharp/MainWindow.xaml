<Window x:Class="logcsharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:logcsharp"
        mc:Ignorable="d"
        Title="LogTest" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="test1button" Content="Test1" HorizontalAlignment="Center" Height="30" Margin="0,37,0,0" VerticalAlignment="Top" Width="64" Click="test1button_Click"/>
        <CheckBox x:Name="cbTest2" Content="Test2" Grid.Column="1" HorizontalAlignment="Left" Margin="29,44,0,0" VerticalAlignment="Top" Checked="cbTest2_Checked" Unchecked="cbTest2_Unchecked"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Center" Height="25" Margin="0,187,0,0" VerticalAlignment="Top" Width="72" Click="btnExit_Click"/>

    </Grid>
</Window>
